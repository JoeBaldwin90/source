<div class="container">
  <h1>Sign-up</h1>

<%= simple_form_for @user do |f| %>

  <%= f.input :name %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.input :subscription_plan, as: :select, collection: [["Basic - £9.99/month", "basic"], ["Pro - £19.99/month", "pro"]], include_blank: false %> 

  <%= f.button :submit, "Sign-up" %>

<% end %>
</div>
