<!DOCTYPE html>
<html>
  <head>
    <title>Source</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:success].present? %>
      <div class="success">
        <%= flash[:success] %>
      </div>
    <% end %>

    <header>
      <h1>Source</h1>

      <nav>
        <% if is_logged_in? %>
          Hi, <%= @current_user.username %>!
        <% else %>
          <div class="sign-up">
            <%= link_to "Sign up", new_user_path, class: "button" %>
            <%= link_to "Log in", new_session_path, class: "button button-outline" %>
          </div>
        <% end %>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
